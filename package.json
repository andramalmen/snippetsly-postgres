        "format:check": "prettier --check '**/*.{ts,js,json}'",
        "lint": "eslint --ext .js,.ts .",
        "validate": "npm-run-all --parallel format:check lint build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/andramalmen/snippetsly-postgres.git"
